<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Type-DB | @ViewData["Title"]</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/@@fortawesome/fontawesome-free/css/all.css" />
        <link rel="stylesheet" href="~/css/default.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/@@fortawesome/fontawesome-free/css/all.min.css" />
        <link rel="stylesheet" href="~/css/default.min.css" />
    </environment>
    <link rel="shortcut icon" href="~/favicon.ico" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand mb-1 pr-3" asp-action="Index">
                <i class="fas fa-database"></i> &nbsp;Type-DB Server
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav px-2">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index">
                            Dashboard
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-action="Authentication">Authentication</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-action="Triggers">Triggers</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-action="Migration">Migration</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-action="Scripts">Scripts</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-action="Settings">Settings</a>
                    </li>
                </ul>
                @*<form class="form-inline my-2 my-lg-0 ml-auto">
            <input class="form-control form-control-dark mr-sm-2" type="search" placeholder="Search in all instances" />
        </form>*@
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item px-2 mr-5">
                        <a class="nav-link" href="/swagger/index.html">
                            <i class="fas fa-external-link-alt"></i>
                            <span class="bordered">
                                Access to the API
                            </span>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item px-2">
                        <a class="nav-link" asp-action="Account"><i class="fas fa-user"></i> Hi Anonymous</a>
                    </li>
                    <li class="nav-item pl-2">
                        <a class="nav-link" asp-action="Lock"><i class="fas fa-lock"></i> Lock Intance</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="py-3 bg-white fixed-bottom">
        <div class="container">
            <div class="row">
                <p class="m-0 col-md-6 small text-dark">Copyright &copy; @DateTime.Now.Year <a href="https://github.com/Type-DB" target="_blank">Type-DB</a> - All Rights Reserved</p>
                <p class="m-0 col-md-6 text-right small text-dark">Crafted with 💗 by <a href="https://twitter.com/clint_network">Clint.Network</a>.</p>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/js/default.js" asp-append-version="true"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/default.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
